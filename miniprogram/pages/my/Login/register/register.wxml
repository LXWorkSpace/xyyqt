<!--miniprogram/pages/my/Login/register/register.wxml-->
<view class="cont">
    <view class="title">
      基本信息
    </view>
    <view class="baseCont">
    <view class="row">
      <text class="info-type">学号</text>
      <input type="number" id="userId" placeholder="请输入学号" bindinput="userIdInput" placeholder-class="placeholderStyle"/>
    </view>
    <view class="row">
      <text class="info-type">密码</text>
      <input type="password" id="passWord" placeholder="请输入密码(需不小于6位)" bindinput="passWordInput" placeholder-class="placeholderStyle"/>
    </view>
    <view class="row">
      <text class="info-type">确认密码</text>
      <input type="password" id="DepassWord" placeholder="再次输入密码(需不小于6位)" bindinput="DepassWordInput" placeholder-class="placeholderStyle"/>
    </view>
    <view class="row">
      <text class="info-type">真实姓名</text>
      <input type="text" id="name" placeholder="请输入真实姓名" bindinput="nameInput" placeholder-class="placeholderStyle"/>
    </view>

    <view class="row">
      <text class="info-type">手机号</text>
      <input type="number" id="phoneNum" placeholder="请输入手机号" bindinput="phoneNumInput" placeholder-class="placeholderStyle"/>
    </view>

    <view class="row">
      <text class="info-type">家庭住址省区</text>
        <picker mode='region' bindchange="regionChange">
            <view class="picker">{{region}}</view>
        </picker>
    </view>
    <view class="row">
      <text class="info-type">家庭详细住址</text>
      <input type="text" id="address" placeholder="请输入家庭详细住址" bindinput="addressInput" placeholder-class="placeholderStyle"/>
    </view>
    <view class="row">
      <text class="info-type">所在学院</text>
        <picker value="{{cindex}}" range="{{colleges}}" bindchange="collegeChange">
            <view class="picker">{{colleges[cindex]}}</view>
        </picker>
    </view>
    <view class="row">
      <text class="info-type">专业</text>
      <input type="text" id="major" placeholder="请输入专业" bindinput="majorInput" placeholder-class="placeholderStyle"/>
    </view>

    <view class="row">
      <text class="info-type">疫苗接种情况</text>
        <picker value="{{vindex}}" range="{{vaccines}}" bindchange="vaccineChange">
            <view class="picker">{{vaccines[vindex]}}</view>
        </picker>
    </view>
  </view>

</view>

<view>
  <button bindtap="regBtn" class="regBtn">注 册</button>
</view>