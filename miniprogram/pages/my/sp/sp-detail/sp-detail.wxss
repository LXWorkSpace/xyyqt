/* miniprogram/pages/my/sp/sp-detail/sp-detail.wxss */
page{
  background-color: white;
}

.bg{
  background: linear-gradient(to right, #6AEFD2, #60ABFE);
  height: 160px;
  width: 100%;
  text-align: center;
}

.cont{
  background-color: white;
  position: relative;
  bottom: 110px;
  width: 90%;
  margin: 0 auto;
  border-radius: 10px;
  box-shadow: 0px 5px 20px 0px #aaaaaa;
  padding: 15px 0px;
}

.row{
  display: flex;
  justify-content: space-between;
  padding: 10px 0px;
  align-items: center;
}

.title{
  width: 30%;
  text-align: end;
  font-size: 14px;
  font-weight: 700;
  color: #212121;
}

.info{
  width: 60%;
  text-align: start;
  font-size: 14px;
  color: #616161;
}

.buttons{
  margin-top: 10px;
  position: relative;
  bottom: 110px;
  display: flex;
  flex-direction: column;
}
.button{
  margin-top: 20px;
  width: 60%;
  color: white;
  background: linear-gradient(to right, #6AEFD2, #60ABFE);
  font-weight: 700;
  border-radius: 10px;
}