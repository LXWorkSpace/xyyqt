<!--miniprogram/pages/static/static.wxml-->
<view class="bg"></view>
<view class="cont">
  <view class="row">
    <view class="block">
      <view class="num">
        <text class='b-text' >{{qiandao}}/</text>
        <text class='s-text' >{{person}}</text>
      </view>
      <view class="b-info">
        <text style="color:#58A3F7; font-size: 8px; padding-right:5px" >●</text>
        <text class="b-font">签到人数</text>
      </view>
    </view>
    <view class="block">
      <view class="num">
        <text class='b-text' >{{isovertem}}/</text>
        <text class='s-text' >{{person}}</text>
      </view>
      <view class="b-info">
        <text style="color:#FEC03D; font-size: 8px; padding-right:5px" >●</text>
        <text class="b-font">发热人数</text>
      </view>
    </view>
  </view>

  <view class="row">
    <view class="block">
      <view  class="num">
        <text class='b-text' >{{ache}}/</text>
        <text class='s-text' >{{person}}</text>
      </view>
      <view class="b-info">
        <text style="color:#FF6F2F; font-size: 8px; padding-right:5px" >●</text>
        <text class="b-font">咽痛、呼吸困难人数</text>
      </view>
    </view>
    <view class="block">
      <view  class="num">
        <text class='b-text' >{{area}}/</text>
        <text class='s-text' >{{person}}</text>
      </view>
      <view class="b-info">
        <text style="color:#FB6260; font-size: 8px; padding-right:5px" >●</text>
        <text class="b-font">位于中高风险地区人数</text>
      </view>
    </view>
  </view>

  <block wx:if="{{isshow}}">
    <view class="row" >
    <view class="block">
      <view class="num">
        <text class='b-text' >{{vindex2}}/</text>
        <text class='s-text' >{{person}}</text>
      </view>
      <view class="b-info">
        <text style="color:#32A216; font-size: 8px; padding-right:5px" >●</text>
        <text class="b-font">已完成接种人数</text>
      </view>
    </view>
    <view class="block">
      <view class="num">
        <text class='b-text' >{{vindex1}}/</text>
        <text class='s-text' >{{person}}</text>
      </view>
      <view class="b-info">
        <text style="color:#4BCED0; font-size: 8px; padding-right:5px" >●</text>
        <text class="b-font">已接种一针人数</text>
      </view>
    </view>
  </view>

  <view class="row">
    <view class="block">
      <view  class="num">
        <text class='b-text' >{{vindex0}}/</text>
        <text class='s-text' >{{person}}</text>
      </view>
      <view class="b-info">
        <text style="color:#B993D6; font-size: 8px; padding-right:5px" >●</text>
        <text class="b-font">未接种疫苗人数</text>
      </view>
    </view>
    <view class="block">
      <view  class="num">
        <text class='b-text' >{{notInBeijing}}/</text>
        <text class='s-text' >{{person}}</text>
      </view>
      <view class="b-info">
        <text style="color:#8385F3; font-size: 8px; padding-right:5px" >●</text>
        <text class="b-font">离京人数</text>
      </view>
    </view>
  </view>
  </block>
  

  <view class="v-arrow" bindtap="arrow">
    <text class="arrowtext" wx:if="{{!isshow}}"></text>
    <image class="arrow" src="{{isshow ? '../../images/up.png' : '../../images/down.png'}}"></image>
  </view>

</view>

<view class="cont">
  <view class="title">疫苗接种情况</view>
  <view class="ec">
    <ec-canvas id="mychart-dom-pie" canvas-id="mychart-pie" ec="{{ ec1 }}"></ec-canvas>
  </view>
</view>
<view class="cont">
  <view class="title">每日症状统计</view>
  <view class="ec">
    <ec-canvas id="mychart-dom-bar" canvas-id="mychart-bar" ec="{{ ec2 }}"></ec-canvas>
  </view>
</view>


