page{
  background-color: white;
}

.bg{
  background: linear-gradient(to right, #B993D6, #8CA6DB);
  height: 160px;
  width: 100%;
}
.cont{
  background-color: white;
  width: 90%;
  position: relative;
  bottom: 120px;
  margin: 0px auto;
  box-shadow: 0px 5px 20px 0px #aaaaaa;
  border-radius: 10px;
}

.row{
  display: flex;
  justify-content: space-around;
  padding: 10px 5px 0px 5px;
}
.block{
  width:45%;
  height:70px;
  margin: 0px auto;
  color: #666666;
  padding: 10px 0px 10px 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.b-font{
  color: #aaaaaa;
  font-size: 14px;
  font-Family: "'Microsoft YaHei', Arial, 'Avenir', Helvetica, sans-serif"
}
.b-text{
  font-size: 20px;
}
.s-text{
  font-size: 14px;
}
.b-info{
  display: flex;
  align-items: center;
}
.arrowtext{
  color: #888;
  font-size: 13px;
}
.arrow{
  width: 15px;
  height: 10px;
}
.v-arrow{
  text-align: center;
  margin: 8px 0px 10px 0px;
}

ec-canvas {
  width: 100%;
  height: 100%;
}
.ec{
  height: 450px;
  margin-bottom: 20px;
}

.title{
  padding: 20px;
  font-size: 15px;
}
