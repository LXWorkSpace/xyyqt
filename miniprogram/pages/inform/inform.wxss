page{
  background-color: #fafafa;
}

.image{
  width: 100%;
  border-top:1px solid #DDDDDD;
  border-bottom:1px solid #DDDDDD;
}


.delbtn{
  width: 24px;
}
.addbtn{
  width: 40px;
  margin:10px auto
}

.inform-cont{
  position: relative;
  bottom: 60px;
  width: 90%;
  margin: 10px auto;
  background-color: white;
  border-radius: 5px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100px;
  line-height: 30px;
  border-bottom: 2px solid #f5f5f5;
  box-shadow: 0px 5px 10px 0px #dddddd;
}

.title-cont{
  width: 100%;
  margin: 10px;
}

.inform-title{
  margin-left: 10px;
  padding: 8px 0px 5px 0px;
}

.public-time{
  margin-left: 10px;
  color: #aaaaaa;
  font-size: 13px;
}

